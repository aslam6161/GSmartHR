@model GSmartHR.Web.Areas.Admin.Models.Users.UserModel

@{
    var action = "Add";

    if (Model.IsEditMode(Model.Id))
    {
        action = "Update";
    }
}

<h4> <a class="btn btn-primary" href="/Admin/User/UserList">Back To User List</a></h4>
<div class="row">
    <div class="col-lg-6">
        <h3 class="page-header">@action User</h3>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true)




        <div class="form-group">
            @Html.LabelFor(model => model.Username, new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.Username, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Username, null, new { @class = "valdation-error" })
            </div>
        </div>
  
        <div class="form-group">
            @Html.LabelFor(model => model.Password, new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Password, null, new { @class = "valdation-error" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.IsActive, new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.CheckBoxFor(model => model.IsActive, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IsActive, null, new { @class = "valdation-error" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-4">
                <input type="submit" value="@action  User" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
